rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isRestaurantOwner(restaurantId) {
      let restaurant = get(/databases/$(database)/documents/restaurants/$(restaurantId));
      return restaurant != null && restaurant.data.owner_id == request.auth.uid;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Restaurants collection
    match /restaurants/{restaurantId} {
      allow read: if true; // Anyone can read restaurant info
      allow create: if isAuthenticated();
      allow update, delete: if isRestaurantOwner(restaurantId);
      
      // Menu subcollection
      match /menu/{menuItemId} {
        allow read: if true; // Anyone can read menu items
        allow create, update, delete: if isRestaurantOwner(restaurantId);
      }
    }

    // Orders collection
    match /orders/{orderId} {
      allow read: if isAuthenticated() && (
        resource.data.customer_id == request.auth.uid ||
        resource.data.restaurant_id == request.auth.uid
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.restaurant_id == request.auth.uid
      );
    }
  }
}